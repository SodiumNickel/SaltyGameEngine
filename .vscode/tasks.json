{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-std=c++17",
                "-I${workspaceFolder}/include/SDL2",
                "-I${workspaceFolder}/include/imgui",
                "-I${workspaceFolder}/include/glm",
                "-I${workspaceFolder}/include/nlohmann",
                "-I${workspaceFolder}/src",
                "-L${workspaceFolder}/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/Engine/Engine.cpp",
                "${workspaceFolder}/src/Engine/Stage/*.cpp",
                "${workspaceFolder}/src/Engine/Menu/*.cpp",
                "${workspaceFolder}/src/Engine/Tabs/*.cpp",
                "${workspaceFolder}/src/Engine/History/*.cpp",
                "${workspaceFolder}/src/Engine/History/Edits/*.cpp",
                "${workspaceFolder}/src/Engine/Debug/*.cpp",
                "${workspaceFolder}/src/Game/Game.cpp",
                "${workspaceFolder}/src/Game/ECS/*.cpp",
                "${workspaceFolder}/src/Game/AssetManager/*.cpp",
                "${workspaceFolder}/src/Game/Helpers/*.cpp",
                "-o",
                "${workspaceFolder}/build/saltyengine.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}